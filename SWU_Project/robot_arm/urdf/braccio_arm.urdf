<?xml version="1.0"?>
<robot name="braccio_arm">
  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_arm/meshes/braccio_base.stl"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="base_joint" type="revolute">
    <parent link="base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.14" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <link name="shoulder_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_arm/meshes/braccio_shoulder.stl"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="shoulder_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="elbow_link"/>
    <origin xyz="0 0 0.105" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="3.14" effort="10" velocity="1.0"/>
  </joint>
  
  <link name="elbow_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_arm/meshes/braccio_elbow.stl"/>
      </geometry>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="elbow_link"/>
    <child link="wrist_pitch_link"/>
    <origin xyz="0 0 0.105" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <link name="wrist_pitch_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_arm/meshes/braccio_wrist_pitch.stl"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_pitch_joint" type="revolute">
    <parent link="wrist_pitch_link"/>
    <child link="wrist_roll_link"/>
    <origin xyz="0 0 0.09" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <link name="wrist_roll_link">
    <visual>
      <geometry>
        <mesh filename="package://robot_arm/meshes/braccio_wrist_roll.stl"/>
      </geometry>
    </visual>
  </link>

  <joint name="wrist_roll_joint" type="revolute">
    <parent link="wrist_roll_link"/>
    <child link="camera_link"/>
    <origin xyz="0 0 0.09" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="3.14" effort="10" velocity="1.0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
    </visual>
  </link>
</robot>
